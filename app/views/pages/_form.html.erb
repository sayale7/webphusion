<%= form_for @page, :remote => true do |f| %>

<div class="page_info_section">
	<h3><%= t('page.available_languages') %></h3>
	<% for language in Language.all.each do %>
		<%= check_box_tag "languages[]", language.language, @page.is_added_language(language.id) %><%= language.language %>
	<% end %>
</div>

<div class="page_info_section">
	<h3><%= t('page.common') %></h3>		
	<%= hidden_field_tag :item_content %>
	<%= hidden_field_tag :item_content_id %>
   <%= f.label :theme_id, t('common.theme') %>
   <%= f.select :theme_id, current_user.themes.all.collect {|theme| [ theme.name, theme.id ] } %>
	<% unless has_children(@page) %>
   <%= f.label :parent_id, t('page.parent') %>
   <%= f.select :parent_id, (current_user.pages.find_all_by_parent_id(nil) - @page.to_a).collect {|page| [ page.name, page.id ] }, :include_blank => t('common.none') %>
	<% end %>
	<%= f.hidden_field :website_id, :value => current_user.id %>
	<%= f.label :active, t('common.active') %>
	<%= f.check_box :active  %>
</div>
<div class="page_info_section">    
	<%= f.label :name, t('common.name') %>
  <%= f.text_field :name %>
  <%= f.label :title, t('page.title') %>
  <%= f.text_field :title %>
</div>
<p>
	<%= f.submit t('common.save') %>
</p>
<% end %>