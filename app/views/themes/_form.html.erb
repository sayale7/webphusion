<div>
	<%= form_for @theme, :remote => true do |f| %>
		<p><%= f.label :user_id, "Benutzer" %>
		<%= f.select :user_id, User.all.collect {|user| [ user.email, user.id ] } %></p>
		<%= f.text_field :name %> - <%= link_to t('common.delete'), @theme, :confirm => t('common.confirm'), :method => :delete %> 
		<p>
			<%= f.text_area :theme_content, :cols => 140, :rows => 40, :id => 'code' %>
		</p>
		<p>
			<%= f.submit t('common.save') %>
		</p>
	<% end %>
</div>
<%= javascript '/codemirror/js/codemirror' %>

<style type="text/css"> 
.CodeMirror-line-numbers {
	width: 2.2em;
	color: #aaa;
	background-color: #eee;
	text-align: right;
	padding-right: .3em;
	font-size: 10pt;
	font-family: monospace;
	padding-top: .4em;
}
</style> 

<script type="text/javascript"> 
CodeMirror.fromTextArea('code', {
	height: '87%',
	parserfile: "parseliquid.js"  ,
	stylesheet: ["/codemirror/css/xmlcolors.css", "/stylesheets/liquidcolors.css"],
	path: "/codemirror/js/",
	textWrapping: true,
	lineNumbers: true
});
</script>